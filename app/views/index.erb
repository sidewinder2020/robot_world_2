<h1>My Robots</h1>

<h2> You are in <%= @location %>. </h2>

<% @robots.each do |robot| %>
  <h3><a href="/robot/<%= robot.id %>"><%= robot.name %></a></h3>
  <p><%= robot.city %></p>
  <p><%= robot.state%></p>
  <p><%= robot.deparment%></p>
  <a href="/robots/<%= robot.id  %>/edit">Edit</a>
  <form action="/robots/<%= robot.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="delete"/>
  </form>
<% end %>
